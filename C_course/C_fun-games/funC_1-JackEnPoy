#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int player, computer;
    const char *choices[] = {"Rock", "Paper", "Scissor"};

    printf("Choose Rock(0), Paper(1), Scissor(2): ");
    
    srand(time(0));
    computer = rand() % 3;

    scanf("%d", &player);

    if (player < 0 || player > 2) {
        printf("Invalid input! Please choose 0, 1, or 2.\n");
        return 1;
    }

    printf("You chose: %s\n", choices[player]);
    printf("Computer chose: %s\n", choices[computer]);

    if (player == computer) {
        printf("ðŸŸ° It's a tie!\n");
    } else if ((player == 0 && computer == 1) ||
               (player == 1 && computer == 2) ||
               (player == 2 && computer == 0)) {
        printf("ðŸ’¥ You lose!\n");
    } else {
        printf("ðŸŽ‰ You won!\n");
    }

    return 0;
}
